@model VideoGameCatalog.Models.Game

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="row">
            <div class="col-md-5 text-center">
                <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded-3 shadow" style="max-height: 400px;" />
            </div>

            <div class="col-md-7">
                <h2 class="mb-3">@Model.Name</h2>
                <p><strong>ID:</strong> @Model.ID</p>

                <form asp-controller="Game" asp-action="Edit" method="post" class="mt-3">
                    <input type="hidden" asp-for="ID" />

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label">Género</label>
                        <input asp-for="Gender" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Precio</label>
                        <input asp-for="Price" class="form-control" type="number" step="100" />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-pencil"></i> Guardar cambios
                        </button>

                        <form asp-controller="Game" asp-action="Delete" asp-route-id="@Model.ID" method="post" onsubmit="return confirm('¿Seguro que deseas eliminar este juego?');">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>

                        <a asp-controller="Game" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>