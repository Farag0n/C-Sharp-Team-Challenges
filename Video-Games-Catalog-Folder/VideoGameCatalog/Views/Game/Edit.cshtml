@model VideoGameCatalog.Models.Game

<div class="card p-4 shadow-lg" style="max-width: 800px; margin: 2rem auto;">
    <div class="d-flex flex-wrap align-items-start">
        <div class="me-4 mb-3">
            <img src="@Model.Image" alt="@Model.Name" style="width: 250px; border-radius: 10px;" />
        </div>

        
        <div style="flex: 1;">
            <h3 class="mb-3">Editar juego</h3>

            <form asp-action="Edit" asp-controller="Game" method="post">
                <input type="hidden" asp-for="ID" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label fw-bold">GÃ©nero</label>
                    <input asp-for="Gender" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold">Precio</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-success me-2">Guardar cambios</button>
                    @* <a href="@Url.Action("Index", "Game")" class="btn btn-secondary">Volver</a> *@
                </div>
            </form>
        </div>
    </div>
</div>

